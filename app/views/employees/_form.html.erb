<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.association :manager, :label_method => lambda { |manager| "#{manager.first_name} #{manager.last_name}" } %>
    <%= f.association :manager, value:current_user %>
    <%= f.hidden_field :manager, value:current_user, :label_method => lambda { |manager| "#{manager.first_name} #{manager.last_name}" }%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
