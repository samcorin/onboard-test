<%= simple_form_for [@user, @employee] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <p><strong>Manager: </strong><%= current_user.email %></p>
    <%= f.hidden_field :user_id, value:current_user.id %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
