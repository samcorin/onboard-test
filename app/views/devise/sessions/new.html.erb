<div class="ui container">
  <p id="notice"><%= notice %></p>
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="ui form">
      <%= f.input :email, required: true, autofocus: true, class: "field" %>
      <%= f.input :password, required: false, class: "field" %>
      <%= f.input :remember_me, class: "ui checkbox", as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Log in", class: "ui button" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
